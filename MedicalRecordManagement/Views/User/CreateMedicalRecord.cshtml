@model MedicalRecordManagement.Models.Views.UserViewModel
<style>
    .form-section {
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 10px;
        background-color: #f8f8f8;
        margin-bottom: 20px;
    }
</style>
@{
    ViewData["Title"] = "Create Medical Record";
}

<h1>Create Medical Record</h1>

<!-- Seção estilizada com bordas arredondadas -->
<div class="form-section">
    <h2>User Information</h2>
    <p>Tax Number: @Model.TaxNumber</p>
    <p>Role: @Model.Role</p>
</div>

<hr />

<form asp-controller="MedicalRecord" asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="">Full Name:</label>
        <input type="text" class="form-control" id="fullName" name="FullName" asp-for="FullName" required>
    </div>
    <div class="form-group">
        <label for="address">Address:</label>
        <input type="text" class="form-control" id="address" name="Address" asp-for="Address" required>
    </div>
    <div class="form-group">
        <label for="phoneNumber">Phone Number:</label>
        <input type="text" class="form-control" id="phoneNumber" name="PhoneNumber" asp-for="PhoneNumber" required>
    </div>
    <div class="form-group">
        <label for="photo">Photo:</label>
        <input type="file" class="form-control-file" id="photo" name="Photo" accept=".jpg,.png" value="caminho/do/arquivo/default.jpg" asp-for="Photo">
    </div>
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.Role) 
    @Html.HiddenFor(m => m.TaxNumber) 
    <button type="submit" class="btn btn-primary">Create</button>
</form>
